{
    "BotConfiguration": {
        "OpenTelemetryCollectorUrl": "http://xps-gold:30431",
        "BotApiKey": "testKey",
        "BaseStorageApiUrl": "http://xps-gold:30500/api/v2.0/YaSail/",
        "BaseReaderApiUrl": "http://xps-gold:30898"
    },
    
    "KafkaConfiguration": {
        "BootstrapServers": "xps-gold.ivan-b.com:30994"
    },
    
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Grafana.Loki"
        ],
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "IB": "Information",
                "Microsoft.Hosting.Lifetime": "Information",
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "GrafanaLoki",
                "Args": {
                    "uri": "http://xps-gold:30310",
                    "propertiesAsLabels": [
                        "level",
                        "Application",
                        "version",
                        "service"
                    ]
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console",
                            "Args": {
                                "restrictedToMinimumLevel": "Debug",
                                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}, {SourceContext,-65:l}] {Message:lj} {NewLine}{Exception}"
                            }
                        }
                    ]
                }
            }
        ]
    }
}