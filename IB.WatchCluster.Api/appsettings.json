{
  "ApiConfiguration": {
    "OpenTelemetryCollectorUrl": "http://192.168.0.39:30431",
    "AuthSettings": {
      "Scheme": "TokenSchema",
      "TokenName": "apiToken",
      "Token": "test-token"
    }
  },

  "KafkaConfiguration": {
    "BootstrapServers": "192.168.0.39:30994"
  },
  
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "IB": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://192.168.0.39:30310",
          "propertiesAsLabels": [
            "level",
            "Application",
            "version"
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Debug",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}, {SourceContext,-65:l}] {Message:lj} {NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },
  
  "AllowedHosts": "*"
}
